doctype html
html
    header
        title Detail of the Course
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    body
        div
            h2.font-weight-bold.text-danger Course Detail
            row(action='/DetailsCourse/:id' , method = 'GET')
                dt.col-sm-2 Course 
                dd.col-sm-10 #{course.Course}
                dt.col-sm-2 Time 
                dd.col-sm-10 #{course.Time}
                dt.col-sm-2 Course Code 
                dd.col-sm-10 #{course.CourseCode}
                dt.col-sm-2 Enrolment Time 
                dd.col-sm-10 #{course.EnrolmentTime}
                dt.col-sm-2 Number Of Credits 
                dd.col-sm-10 #{course.NumberOfCredits}

        div
            a(href='/EditCourse/' + `${course._id}`).btn.btn-link Edit 
        div
            a(href='/').btn.btn-link Back to Main Page